<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.tag.instagramdemo.example.ui.NearbyPostsActivity">

    <Spinner
        android:id="@+id/locationSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:spinnerMode="dialog"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:dropDownSelector="@android:drawable/btn_dropdown"
        android:background="#0fddaf"/>

    <ListView
        android:id="@+id/recent_posts_list"
        android:layout_below="@id/locationSpinner"
        android:dividerHeight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</RelativeLayout>
